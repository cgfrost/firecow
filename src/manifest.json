{
  "description": "Record a web session to generate a Skipjaq Load Model.",
  "manifest_version": 2,
  "name": "Skipjaq Recorder",
  "version": "1.0",
  "homepage_url": "http://skipjaq.com/",
  "icons": {
    "18": "icons/icon-18.png",
    "32": "icons/icon-32.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },

  "applications": {
    "gecko": {
      "id": "recorda@skipjaq",
      "strict_min_version": "57.0a1"
    }
  },

  "permissions": [
    "https://api.skipjaq.io/*",
    "https://api.skipjaq.co/*",
    "activeTab",
    "storage",
    "menus"
  ],

  "browser_action": {
    "browser_style": false,
    "chrome_style": false,
    "default_icon": {
      "16": "icons/icon-16.png",
      "24": "icons/icon-24.png",
      "32": "icons/icon-32.png"
    },
    "default_popup": "popup/recorda.html",
    "default_title": "Skipjaq"
  },

  "background": {
    "scripts": [
      "background/Hash.js",
      "background/MilkAuth.js",
      "background/MilkAction.js",
      "background/Milk.js",
      "background/worker.js"
    ]
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Open Skipjaq Recorder"
    }
  },

  "options_ui": {
    "browser_style": false,
    "chrome_style": false,
    "page": "settings/options.html"
  }

}
